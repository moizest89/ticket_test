<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div class="row">
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field row">
    <div class="large-12 columns">
    <%= f.label :category_id %>
    <%#= f.text_field :category_id %>
    <%= collection_select(:item, :category_id, Category.all, :id, :name, {prompt: true}) %>
    </div>
  </div>

  <%#= @users.inspect %>

  <div class="field row">
    <div class="large-12 columns">
    <%= f.label :description %>
    <%= f.text_area :description %>
    </div>
  </div>
  
  <div class="field row">
    <div class="large-12 columns">
    <%= f.label :user_id %>
    <select name="item[user_id]">
      <% @users.each do |user| %>
         <option value="<%= user.id %>"><%= user.name %></option>
      <% end %>
    </select>
  </div>
  </div>
  <div class="actions">
    <%= f.submit "#{controller.action_name.capitalize} item", :class => "button small"%>
  </div>
<% end %>
