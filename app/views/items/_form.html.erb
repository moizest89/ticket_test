    <%= collection_select(:item, :category_id, Category.all, :id, :name, {prompt: true}) %>
    
  </div>

  <%#= @users.inspect %>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  
  <div class="field">
    <%= f.label :user_id %><br>
    <%#= collection_select(:item, :user_id, @users, :id, :name, {prompt: true}) %>
